{
  "packages": [
    "packages/*",
    "packages/micro-apps/*",
    "packages/libraries/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "command": {
    "version": {
      "coventionalCommits": true,
      "yes": true,
      "message": "chore(release): publish %s [skip ci]",
      "allowBranch": [
        "main",
        "release/@infini-soft/*",
        "circleci-project-setup"
      ]
    }
  }
}
